<div class="container">
    <div class="jumbotron text-white bg-dark mb-3">
        <h1 class="display-4">Agrega una noticia!</h1><br>
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <form action="" method="post">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Titulo</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1"
                            placeholder="Ingrese el titulo de la noticia" name="titulo">
                    </div>


                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Contenido</label>
                        <textarea class="form-control" placeholder="Ingrese el contenido de la noticia" id="exampleFormControlTextarea1" name="contenido" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlInput1">Fuente</label>
                        <input type="text" class="form-control"
                            placeholder="Ingrese el URL de la fuente de su noticia" name="fuente">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-dark" type="submit">Agregar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div><br>